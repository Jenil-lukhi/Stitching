<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/group3"
    tools:context=".LoginActivity.SignUp_Activity">

    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/sign_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="287dp"
            android:gravity="top"
            android:text="@string/sign_up"
            android:textAppearance="@style/sign_up" />

        <TextView
            android:id="@+id/welcome_to_"
            android:layout_width="295dp"
            android:layout_height="24dp"
            android:layout_below="@id/sign_up"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:gravity="top"
            android:text="@string/welcome_to_1"
            android:textAppearance="@style/welcome_to_" />

        <EditText
            android:id="@+id/full_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/welcome_to_"
            android:layout_marginTop="30dp"
            android:ems="15"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="26dp"
            android:hint="Full Name"
            android:backgroundTint="@color/white"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:inputType="text" />

        <EditText
            android:id="@+id/editTextPhone2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/full_name"
            android:layout_marginTop="15dp"
            android:ems="15"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="26dp"
            android:hint="Mobile Number"
            android:backgroundTint="@color/white"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:inputType="phone" />

        <EditText
            android:id="@+id/editTextTextPassword1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextPhone2"
            android:layout_marginTop="15dp"
            android:ems="15"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="26dp"
            android:hint="Password"
            android:backgroundTint="@color/white"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/editTextNumberPasswor2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextTextPassword1"
            android:layout_marginTop="15dp"
            android:ems="15"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="26dp"
            android:hint="Confirm Password"
            android:backgroundTint="@color/white"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_below="@id/editTextNumberPasswor2"
            android:layout_centerInParent="true"
            android:backgroundTint="@color/white"
            android:text="SIGN UP"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/or_sign_up_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_below="@id/button3"
            android:text="@string/or_sign_up_"
            android:textAppearance="@style/or_sign_up_"
            android:lineSpacingExtra="3sp"
            android:gravity="center_vertical"
            />

        <ImageView
            android:id="@+id/google"
            android:layout_width="34.48dp"
            android:layout_height="33.94dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="122dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="752.06dp"
            android:layout_centerVertical="true"
            android:clipToOutline="true"
            android:background="@drawable/google"
            />

        <ImageView
            android:id="@+id/facebook"
            android:layout_width="34.48dp"
            android:layout_height="33.94dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="184dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="751dp"
            android:layout_centerVertical="true"
            android:background="@drawable/facebook"
            />


        <ImageView
            android:id="@+id/apple"
            android:layout_width="27dp"
            android:layout_height="33dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="246dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="751dp"
            android:layout_centerVertical="true"
            android:background="@drawable/apple"
            />












    </RelativeLayout>
</ScrollView>